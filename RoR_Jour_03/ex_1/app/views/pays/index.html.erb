<p id="notice"><%= notice %></p>

<h1><i>Listing Pays</i></h1>

<table>
  <thead>
    <tr>
      <th>Capitale</th>
      <th>Devise</th>
      <th>Habitants</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pays.each do |pay| %>
      <tr>
        <td><%= pay.capitale %></td>
        <td><%= pay.devise %></td>
        <td><%= pay.habitants %></td>
        <td><%= link_to 'Show', pay %></td>
        <td><%= link_to 'Edit', edit_pay_path(pay) %></td>
        <td><%= link_to 'Destroy', pay, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="ui buttons">
  <button class="ui button">Cancel</button>
  <div class="or"></div>
  <button class="ui positive button">Save</button>
</div>

<%= link_to 'New Pay', :class=> "tiny ui red button" do %>
    <span class="glyphicon glyphicon-alarm-icon"></span> <%= "New Pays" %>
<% end %>
