<% content_for :head do %>
<head>
<title>Ex3</title>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
<link rel="stylesheet" href="/assets/products.scss">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class = "table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to product, :class=> "btn btn-sm btn-primary" do %> <i class="fa fa-eye fa-2x"></i> <%= "Show" %><% end %> |
          <%= link_to edit_product_path(product), :class=> "btn btn-sm btn-primary" do %><span class="glyphicon glyphicon-edit"></span> <%= "Edit" %><% end %> |
          <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-sm btn-danger" do %><span class="glyphicon glyphicon-trash"></span> <%= "Delete" %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_product_path, :class=> "btn btn-primary" do %>
    <span class="glyphicon glyphicon-plus-sign"></span> <%= "New Product" %>
<% end %>
