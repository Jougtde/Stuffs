<p id="notice"><%= notice %></p>

<br>
<div class="ui grid centered">
<div class="ui card">
  <div class="image">
    <img src="http://semantic-ui.com/images/avatar2/large/matthew.png">
  </div>
  <div class="content">
    <a class="header"><%= @user.username %></a>
    <div class="meta">
      <span class="date">Joined in <%= @user.created_at %></span>
    </div>
    <div class="description">
      <%= @user.email %>
    </div>
  </div>
</div>
</div>
<br>
<br>
<div class="ui grid centered">
<%= link_to edit_user_path(@user), :class=> "tiny ui blue basic button" do %><i class="edit icon"></i> <%= "Edit" %><% end %>
<%= link_to users_path, :class=> "tiny ui blue basic button" do %> <i class="chevron circle left icon"></i> <%= "Back" %><% end %>
</div>
