<p id="notice"><%= notice %></p>

<h1>Listing Users</h1> <%= link_to new_user_path, :class=> "tiny ui blue basic button" do %><i class="add user icon"></i> <%= "New User" %><% end %>

<div class="ui grid centered">
<table class="ui collapsing blue celled padded table">
  <thead>
    <tr>
      <th class="center aligned">ID</th>
      <th class="center aligned">Username</th>
      <th class="center aligned">Email</th>
      <th class="center aligned">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to user, :class=> "tiny ui blue basic button" do %> <i class="info icon"></i> <%= "Show" %><% end %>
          <%= link_to edit_user_path(user), :class=> "tiny ui blue basic button" do %><i class="edit icon"></i> <%= "Edit" %><% end %>
          <%= button_to user, :method=>:delete, :class=>"tiny ui red basic button" do %><i class="remove icon"></i> <%= "Delete" %><% end %></td>
      </tr>
      <% end %>
  </tbody>
</table>
</div>
<br>
