<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to user, :class=> "tiny ui blue basic button" do %> <i class="info icon"></i> <%= "Show" %><% end %>
          <%= link_to edit_user_path(user), :class=> "tiny ui blue basic button" do %><i class="edit icon"></i> <%= "Edit" %><% end %>
          <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "tiny ui red basic button" do %><i class="remove icon"></i> <%= "Delete" %><% end %></td>
      </tr>
      <% end %>
  </tbody>
</table>

<br>

<%= link_to new_user_path, :class=> "tiny ui blue basic button" do %><i class="add user icon"></i> <%= "New User" %><% end %>
